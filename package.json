{
  "name": "tests-with-nodejs-graphql",
  "version": "0.0.1",
  "description": "Tests with NodeJs and GraphQL",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/arojunior/tests-with-nodejs-graphql"
  },
  "author": "Junior Oliveira",
  "license": "MIT",
  "homepage": "http://arojunior.com",
  "dependencies": {
    "apollo-server": "^2.3.1",
    "apollo-server-express": "^2.0.0",
    "body-parser": "^1.17.2",
    "express": "4.16.3",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-express": "^1.7.2",
    "graphql-tools": "^3.1.1",
    "merge-graphql-schemas": "^1.5.3",
    "mysql2": "^1.6.4"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "^6.5.2",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.4.2",
    "jest-cli": "^23.4.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.0",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0"
  },
  "scripts": {
    "build": "babel -d ./build ./src --copy-files",
    "prebuild": "rimraf build/*",
    "start": "NODE_ENV=production node ./build/index.js",
    "prestart": "yarn build",
    "dev": "nodemon ./src/index.js --exec babel-node",
    "test-ci": "jest --setupTestFrameworkScriptFile=<rootDir>src/config/setupTests.js",
    "test": "jest --verbose=false",
    "lint": "eslint src",
    "prepush": "yarn lint && yarn build"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./build"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}
