{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "prettier",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "prettier",
    "plugin:import/errors"
  ],
  "rules": {
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "dot-notation": 0,
    "no-console": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100
      }
    ],    
    "quotes": [
      "error",
      "backtick"
    ]    
  },
  "env": {
    "jest/globals": true
  }
}